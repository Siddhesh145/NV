<script src="~/Scripts/go.js" async defer></script>
<script src="~/Scripts/fb.js" async defer></script>
<style type="text/css">
    #customBtn {
	display: inline-block;
	background: white;
    width:100%;
    display: block;
    margin: 0 auto !important;
    width: 100%;
    /*max-width: 162px;*/
    padding-left: 25%;
    position: relative;
    font-size: 13px;
    font-weight: 500;
    color: #696b79;
    height: 50px;
    border: 1px solid #bfc0c6;
    background-color: #fff;
    border-radius: 5px;
    text-align: center;
    }
	#customBtn:hover {
	cursor: pointer;
	}
    span.label {
	font-family: serif;
	font-weight: normal;
	display:none;
    }
    span.icon {
	background: url(../images/gplus-icon.png) transparent 10px 10px no-repeat;
	display: inline-block;
	vertical-align: middle;
	width: 42px;
	height: 42px;
	background-size:32px 32px;
	position: absolute;
	top: 0;
	left: 0
    }
    span.buttonText {
	display: inline-block;
	vertical-align: middle;
	padding-left: 42px;
	padding-right: 42px;
	font-size: 14px;
	/*font-weight: bold;*/
	/* Use the Roboto font that is loaded in the <head> */
        font-family: 'Roboto', sans-serif;
		}
	</style>
	<div class="business-name-section">
		<div class="container">
			<div class="row mt-5 mb-5">
				<div class="col s12 l9">
					<div class="card z-depth-2 mb-5">
						<div class=" bg-dark lead">
							<img src="images/banner/logo-banner.jpg" alt="" class="card-img-top" />
						</div>
						@*<b style="color:#d70a61;margin-top:20px;font-size:20px;">Login</b>*@
						<hr />
						<br />
						<form class="order-form form-comflex">
							<div class="form-group row">
								<div class="col l12 m12 s12" style="text-align:center;margin:20px 0px;">
									<b style="font-family: 'Varela Round', sans-serif;font-size:22px;color:#d70a61;">Login to NaamVidya</b>
								</div>
							</div>
							<fieldset class="fs-login">
								<legend>QUICKLY USING</legend>
								<div class="form-group row">
									<div class="col l6 m8 s12" style="margin-bottom:10px;">
										<button id="fbloginbtn" data-ng-click="checkLoginState();"  class="fbloginbtn" style="margin:0px auto !important;">Facebook</button>
									</div>
									<div class="col l6 m8 s12" style="margin-bottom:10px;">
										@*<button id="gploginbtn" class=" gploginbtn" style="margin:0px auto !important;">GOOGLE</button>*@
										@*<div class=" gploginbtn" id="google-signin2"></div>*@
										<div id="gSignInWrapper">
											<span class="label">Sign in with:</span>
											<button id="customBtn" class="customGPlusSignIn">
												<span class="icon"></span>
												<span class="buttonText">Google</span>
											</button>
										</div>
										<div id="name"></div>
									</div>
								</div>
							</fieldset>
							<fieldset class="fs-login">
								<legend>OR USING EMAIL</legend>
								<div class="form-group row">
									@*<label for="email_id" class="col l12 m12 s12 col-form-label">Email Id</label>*@
									<div class="col l12 m12 s12">
										<input class="form-control" style="width:100%;border-radius:5px;" type="text" data-ng-model="EmailId" id="email_id" placeholder="Your Email Address">
									</div>
								</div>
								<div class="form-group row">
									@*<label for="password" class="col l12 m12 s12 col-form-label">Password</label>*@
									<div class="col l12 m12 s12">
										<input class="form-control" style="width:100%;border-radius:5px;" type="password" data-ng-model="Password" id="password" placeholder="Enter Password">
									</div>
								</div>
								<div class="form-group row">
									<label id="errorMsg" class="col l12 m12 s12 col-form-label"><span style="color:red">{{errorMsg}}</span></label>
									<label id="successMsg" class="col l12 m12 s12 col-form-label"><span style="color:green">{{successMsg}}</span></label>
								</div>
								<div class="form-group row">
									<div class="col l12 m12 s12">
										<a data-ng-click="f_Login();" style="margin-bottom: 20px;width: 100%;border-radius: 5px;height: 50px;line-height: 50px;font-size: 20px;" class="waves-effect waves-light btn">Log in</a>
									</div>
								</div>
								<div class="form-group row">
									<div class="col l12 m12 s12">
										<span class="pull-left tsr_login_a"><a data-ng-click="f_forgotPassword()">Recover password</a></span>
										<span class="pull-right tsr_login_a">New to NaamVidya? <a href="/user-registration">Create Account</a></span>
									</div>
								</div>
							</fieldset>
						</form>
					</div>
				</div>
				<div class="col s12 l3" data-ng-controller="sidebarController">
					<div class="bg-yellow animated slideInBottom">
						<div class="form clearfix">
							<h5 class="lead wc">
								<img src="images/soundicon.png" alt="" />Free First<br>
								Name Analysis
							</h5>
							<p>
								<input class="col  s12" type="text" data-ng-model="newfirstName" placeholder="Enter First Name" only-alphabet />
								<label style="color:#ffffff;font-size:14px;text-align:left;">{{errMsg}}</label>
							</p>
							<!--p>Date of Birth<br/>
								<input class="col  s12" type="text" />
							</p-->
							<input type="button" class="waves-effect waves-light pink btn" value="Analyse" data-ng-click="analyzeFirstName()" />
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
